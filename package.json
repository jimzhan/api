{
  "type": "module",
  "name": "backoffice",
  "version": "24.2.0",
  "description": "An opinionated API application boilerplate for Backoffice",
  "main": "index.js",
  "lint-staged": {
    "**/*.{js}": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "infra:start": "docker-compose up -d",
    "infra:stop": "docker-compose stop",
    "db:init": "yarn migrate && yarn seed",
    "migrate": "knex migrate:latest --debug",
    "migrate:make": "knex migrate:make",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "lint": "prettier --write src && eslint src",
    "lint:fix": "yarn lint --fix",
    "secret": "npx nanoid --size 32",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "watch": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "cross-env NODE_ENV=test vitest run --coverage --pool=forks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimzhan/backoffice.git"
  },
  "keywords": [
    "ESM",
    "fastify",
    "boilerplate",
    "API"
  ],
  "author": "Jim Zhan <jim.zhan@me.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jimzhan/api/issues"
  },
  "homepage": "https://github.com/jimzhan/api#readme",
  "engines": {
    "node": "^18.18 || ^20.8"
  },
  "resolutions": {
    "string-width": "4.2.3"
  },
  "peerDependencies": {
    "fastify-plugin": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "fastify-html": {
      "autoinstall": true
    },
    "fastify-plugin@": {
      "autoinstall": true
    }
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^1.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@fastify/accepts": "^4.3.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/under-pressure": "^8.3.0",
    "@mgcrea/fastify-session": "^2.2.1",
    "@mgcrea/fastify-session-redis-store": "^1.0.0",
    "@scalar/fastify-api-reference": "^1.17.6",
    "ajv": "^8.0.1",
    "ajv-errors": "^3.0.0",
    "argon2": "^0.40.1",
    "config": "^3.3.11",
    "cross-env": "^7.0.3",
    "fastify": "^4.26.1",
    "fastify-html": "^0.3.3",
    "fastify-plugin": "^4.0.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^23.10.1",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "i18next-resources-to-backend": "^1.2.0",
    "ioredis": "^5.3.2",
    "knex": "^3.1.0",
    "nanoid": "^5.0.6",
    "node-rdkafka": "^2.18.0",
    "objection": "^3.1.4",
    "pg": "^8.11.3",
    "protobufjs": "^7.2.6",
    "ulidx": "^2.3.0",
    "vitest": "^1.3.1",
    "winston": "^3.11.0"
  }
}
